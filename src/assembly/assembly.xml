<assembly>
	<id>war</id>
	<formats>
		<format>tar.gz</format>
		<format>zip</format>
	</formats>
	<baseDirectory>ehour-${pom.version}-war</baseDirectory>
	<includeBaseDirectory>true</includeBaseDirectory>
	<moduleSets>
		<moduleSet>
			<includes>
				<include>net.rrm.ehour:eHour-web</include>
			</includes>
			<binaries>
				<outputDirectory>/</outputDirectory>
				<unpack>false</unpack>
				<includeDependencies>false</includeDependencies>
				<outputFileNameMapping>eHour-${pom.version}</outputFileNameMapping>
			</binaries>
		</moduleSet>
	</moduleSets>
	<fileSets>
		<fileSet>
			<directory>src/assembly/txt</directory>
			<lineEnding>dos</lineEnding>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>*.txt</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/assembly/txt_war</directory>
			<lineEnding>dos</lineEnding>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>*.txt</include>
			</includes>
		</fileSet>

		<fileSet>
			<directory>src/assembly/conf</directory>
			<outputDirectory>/conf</outputDirectory>
			<lineEnding>dos</lineEnding>
		</fileSet>

		<fileSet>
			<directory>src/assembly/sql</directory>
			<outputDirectory>sql</outputDirectory>
			<lineEnding>dos</lineEnding>
		</fileSet>
	</fileSets>

</assembly>
