<assembly>
	<id>war</id>
	<formats>
		<format>tar.gz</format>
		<format>zip</format>
	</formats>
	<baseDirectory>ehour-${pom.version}</baseDirectory>
	<includeBaseDirectory>true</includeBaseDirectory>

	<fileSets>
		<fileSet>
			<directory>${project.basedir}/src/assembly/txt/common</directory>
			<lineEnding>dos</lineEnding>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>*.txt</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/assembly/txt/war</directory>
			<lineEnding>dos</lineEnding>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>*.txt</include>
			</includes>
		</fileSet>

		<fileSet>
			<directory>${project.basedir}/src/assembly/conf</directory>
			<outputDirectory>/conf</outputDirectory>
			<lineEnding>dos</lineEnding>
		</fileSet>

		<fileSet>
			<directory>${project.basedir}/src/assembly/sql</directory>
			<outputDirectory>sql</outputDirectory>
			<lineEnding>dos</lineEnding>
		</fileSet>
	</fileSets>

</assembly>
